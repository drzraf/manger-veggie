-extends "bootstrap3/bootstrap3.html"

-load leaflet_tags

-block bootstrap3_title
  Resto Veggie - {{ restaurant.name }}

-block bootstrap3_content
  %link{href: "/static/css/styles.css", rel: "stylesheet"}
  -leaflet_js
  -leaflet_css

  :css
    body {
        padding-top: 51px; /*for navbar*/
    }

  :javascript
    function map_init (map, options) {
      var icon = L.AwesomeMarkers.icon({
        icon: 'cutlery',
        markerColor: 'green',
      })
      L.marker([{{ restaurant.lat }}, {{ restaurant.lon }}], {icon: icon}).addTo(map);
      map.setView([{{ restaurant.lat }}, {{ restaurant.lon }}], 14);
    }

  .container
    -include "navbar.haml"
    .row
      %h1= restaurant.name
      %hr

      .col-md-6
        %h3 Details
        %ul
          %li Address: {{ restaurant.address }}
          %li Téléphone: {{ restaurant.phone }}
          %li Site web:
            %a{href: "{{ restaurant.website }}"}
              =restaurant.website

      .col-md-6
        %div{style: "border: 1px solid black"}
          -leaflet_map "map" callback="window.map_init"
