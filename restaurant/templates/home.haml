-extends "bootstrap3/bootstrap3.html"

-load leaflet_tags

-block bootstrap3_title
  Resto Veggie

-block bootstrap3_extra_head
  %link{href: "/static/css/styles.css", rel: "stylesheet"}
  -leaflet_js
  -leaflet_css

  :css
    .leaflet-container {
        width:  100%;
        height: 100vh;
    }

    body {
        padding-top: 51px; /*for navbar*/
    }

  :javascript
    function map_init (map, options) {
      var icon = L.AwesomeMarkers.icon({
        icon: 'cutlery',
        markerColor: 'green',
      })

      $.getJSON("restaurants.json", function(data) {
        for (var i = 0; i < data.length; i ++) {
          var resto = data[i];
          var marker = L.marker([resto.lat, resto.lon], {icon: icon}).bindPopup('<center><h4>' + resto.name + '</h4></center><hr>' + resto.address + '<br>' + resto.phone + '<br><a href="' + resto.website + '">' + resto.website + '</a><br><a href="restaurant/' + resto.id + '/">Plus d\'informations</a>');
          markers_cluster.addLayer(marker);
        }
      })

      // Locate user
      var lc = L.control.locate().addTo(map);
      lc.locate();

      // makercluster
      var markers_cluster = new L.MarkerClusterGroup({ disableClusteringAtZoom: 17 });
      map.addLayer(markers_cluster);
    }

-block bootstrap3_content
  -include "navbar.haml"

  .container
  -leaflet_map "map" callback="window.map_init"
